<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_person_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jinandaxue.demo1.PersonInfoActivity"
    android:gravity="center_horizontal">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/im_personlogo"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="20dp"
        fresco:backgroundImage="@mipmap/person_head_default"
        fresco:roundAsCircle="true"></com.facebook.drawee.view.SimpleDraweeView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="53dp"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/order_icon_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            />
        <EditText
            android:id="@+id/et_editperson_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58dp"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:hint="请输入昵称"
            android:textColorHint="#999"
            android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d8d8d8"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="13dp"
            ></View>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="53dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/order_icon_phone1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            />
        <EditText
            android:id="@+id/et_editperson_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58dp"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:hint="请输入手机号"
            android:textColorHint="#999"
            android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d8d8d8"
            android:layout_alignParentBottom="true"
            ></View>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="53dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/order_icon_phone1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            />
        <EditText
            android:id="@+id/et_editemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58dp"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:hint="请输入邮箱"
            android:textColorHint="#999"
            android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d8d8d8"
            android:layout_alignParentBottom="true"
            ></View>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="53dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/order_icon_phone1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58dp"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:hint="请输入密码"
            android:password="true"
            android:textColorHint="#999"
            android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d8d8d8"
            android:layout_alignParentBottom="true"
            ></View>

    </RelativeLayout>
    <Button
        android:id="@+id/bt_editperson_bc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="71dp"
        android:textColor="#FFFFFF"
        android:text="修改个人信息"
        android:background="@drawable/my_bt_selector"
        />

</LinearLayout>
