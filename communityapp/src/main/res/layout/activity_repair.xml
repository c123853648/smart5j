<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RepairActivity"
    android:background="@mipmap/bg">
    <EditText
        android:id="@+id/et_name"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/logo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:hint="请输入小区名称"
        android:drawablePadding="10dp"
        android:background="@null"
        />
    <View
        android:id="@+id/et_name_bg"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3F51B5"
        android:layout_below="@+id/et_name"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/et_lou"
        android:layout_below="@+id/et_name_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:hint="请输入单元号"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        android:background="@null"/>
    <View
        android:id="@+id/et_lou_bg"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3F51B5"
        android:layout_below="@+id/et_lou"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/et_home"
        android:layout_below="@+id/et_lou_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:hint="请输入房间号"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        android:background="@null"/>
    <View
        android:id="@+id/et_home_bg"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3F51B5"
        android:layout_below="@+id/et_home"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/et_mobile"
        android:layout_below="@+id/et_home_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:hint="请输入联系电话"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        android:background="@null"/>
    <View
        android:id="@+id/et_mobile_bg"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3F51B5"
        android:layout_below="@+id/et_mobile"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/et_content"
        android:layout_below="@+id/et_mobile_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:hint="请输入故障描述"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        android:background="@null"/>
    <View
        android:id="@+id/et_content_bg"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#3F51B5"
        android:layout_below="@+id/et_content"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/bt_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        android:layout_below="@+id/et_content_bg"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginTop="30dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/my_bt_selector"/>
</RelativeLayout>