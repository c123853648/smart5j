<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.youth.banner.Banner
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/banner"
        app:indicator_width="10dp"
        app:indicator_height="10dp"
        app:indicator_margin="5dp"
        app:indicator_drawable_selected="@drawable/center_shap"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <TextView
        android:gravity="center"
        android:id="@+id/tv_twoshop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/banner"
        android:layout_marginTop="10dp"
        android:drawableTop="@mipmap/twoshop"
        android:drawablePadding="10dp"
        android:src="@mipmap/twoshop"
        android:text="二手市场"/>
    <TextView
        android:gravity="center"
        android:id="@+id/tv_bao"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/banner"
        android:drawableTop="@mipmap/baoxiu"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_twoshop"
        android:drawablePadding="10dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/baoxiu"
        android:text="报事报修"/>
    <TextView
        android:gravity="center"
        android:id="@+id/tv_nes"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/banner"
        android:drawableTop="@mipmap/account"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_bao"
        android:drawablePadding="10dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/baoxiu"
        android:text="小区新闻"/>
    <TextView
        android:gravity="center"
        android:id="@+id/tv_wether"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_below="@+id/banner"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_nes"
        android:layout_marginLeft="0dp"
        android:src="@mipmap/baoxiu"
        android:text="天气"/>
    <LinearLayout
        android:id="@+id/ll_center"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_twoshop"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/bobao"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="公告"/>
                <TextView
                    android:id="@+id/tv_title1"
                    android:layout_toLeftOf="@+id/tv_time1"
                    android:layout_toRightOf="@+id/tv_1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="04-01"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="通知"/>
                <TextView
                    android:id="@+id/tv_title2"
                    android:layout_toLeftOf="@+id/tv_time2"
                    android:layout_toRightOf="@+id/tv_2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:text="111"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="04-01"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_below="@+id/ll_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="推荐"
            android:textColor="#669900"/>
        <com.jinandaxue.view.WrapContentListView
            android:id="@+id/contentListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </com.jinandaxue.view.WrapContentListView>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="全部"
        android:textColor="#669900"/>
</RelativeLayout>